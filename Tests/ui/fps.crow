		</HorizontalStack>
		<HorizontalStack Fit="true">
			<Label Text="GPU Mem:" TextAlignment="Right"/>
			<Label Text="{gpuDedicatedMem}" Font="droid , 12" Width="50"
				TextAlignment="Center" Background="Teal"/>
		</HorizontalStack>
		<HorizontalStack Fit="true">
			<Label Text="GPU Mem:"  TextAlignment="Right"/>
