<?xml version="1.0"?>
<!--<ListBox Data="{TestList}" Focusable="true"/>-->
<ListBox Data="{TestList}" Background="0,5;0,5;0,5;0,5"
			 HorizontalAlignment="Left">
	<Template>
		<Border BorderWidth="1" Margin="1" MinimumSize="0;100" >
			<HorizontalStack>
				<Scroller  Name="scroller1" Margin="1" VerticalScrolling="true" 
							ScrollY="{../scrollbar1.Scroll}">
					<VerticalStack Height="-1" Name="List" Margin="0" VerticalAlignment="Top"/>
				</Scroller>
				<Scrollbar Name="scrollbar1" Scroll="{../scroller1.ScrollY}" MaximumScroll="{../scroller1.MaximumScroll}"
					Orientation="Vertical" Width="10" />
			</HorizontalStack>
		</Border>
	</Template>
</ListBox>

