<?xml version="1.0"?>
<Container Name="MainGrp" Background="0,5;0,5;0,5;0,5"
	HorizontalAlignment="Left" VerticalAlignment="Top"
	Margin="10" Width="-1" Height="-1" Focusable="True" >

		<VerticalStack Name="vsFps"  BorderWidth="1" Margin="5" Spacing="4">
			<HorizontalStack>
				<Label Text="Update:" FontColor="White" />
				<Label Name="labUpdate" Text="{update}" FontSize="12" Background="DarkGreen"/>
			</HorizontalStack>
			<HorizontalStack Name="hsFps" Background="Red" >
				<Label Name="captionFps" Text="Fps:" />
				<Label Name="valueFps" Text="{fps}" Font="droid bold, 12" TextAlignment="Center" Background="AoEnglish"/>
			</HorizontalStack>
			<HorizontalStack Background="Red">
				<Label Text="Min:" Width = "30" />
				<Label Text="{fpsMin}" Font="droid bold, 12" TextAlignment="Center" Background="AoEnglish"/>
			</HorizontalStack>
			<HorizontalStack Background="Red" >
				<Label Text="Max:" Width = "30"/>
				<Label Text="{fpsMax}" Font="droid bold, 12" TextAlignment="Center" Background="AoEnglish"/>
			</HorizontalStack>

		</VerticalStack>				
</Container>