<?xml version="1.0"?>
<Border BorderWidth="1" BorderColor="LightGray"  Height="-1" Width="0" MouseClick="onMouseClick">
	<VerticalStack Height="-1" Width="0">
		<HorizontalStack Spacing="1" Height="-1" Width="0">
			<Image Margin="2" Width="12" Height="12" Path="{Image}" SvgSub="{SvgSub}"/>
			<Label Text="{Title}" Width="0"/>
		</HorizontalStack>
		<Container Name="Content" Visible="false"/>
	</VerticalStack>
</Border>